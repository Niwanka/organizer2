<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:textColor="@color/white"
    tools:context=".AddTask">

    <TextView
        android:id="@+id/addTaskHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/Text1"
        android:textStyle="bold"
        android:text="Add Task" 
        android:textSize="24sp"/>

    <ImageButton
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/addTaskHeading"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="6dp"
        app:srcCompat="@drawable/icons8_save_24" />
    
    <EditText
        android:id="@+id/addTaskHead"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Enter Title"
        android:padding="12dp"
        android:textSize="20sp"
        android:background="@drawable/border_1"
        android:layout_below="@id/addTaskHeading"

        android:layout_marginTop="16dp"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/addTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Enter Description"
        android:padding="12dp"
        android:textSize="20sp"
        android:background="@drawable/border_1"
        android:layout_below="@id/addTaskHead"

        android:layout_marginTop="16dp"
        android:maxLines="6"/>

    <Spinner
        android:id="@+id/addTaskPrioritySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/border_1"
        android:hint="Select Priority"

        android:layout_below="@id/addTaskDescription"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/addTaskDeadlineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Select Deadline"
        android:textSize="20sp"
        android:background="@color/Text1"
        android:layout_below="@id/addTaskPrioritySpinner"
        android:layout_marginTop="16dp"

        android:maxLines="1"/>





</RelativeLayout>